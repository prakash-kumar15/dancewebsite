block style
    style
        include ../static/style.css 
        include ../static/stylecontact.css 
block content 
  div.contactsection
    h1 Contact Us
    form(action= "/contact", method= "post", class= "myform")
        <input type="text"class= "myinput" name="name" placeholder="Enter your name">
        <input type="phone" class= "myinput" name="phone" placeholder="Phone No">
        <input type="email" class= "myinput" name="email" placeholder="@Email">
        <input type="address"class="myinput" name="address" placeholder="Address">
        <input type="concern"class="myinput" name="concern" placeholder="Enter your concern">
        button(class="btn")
            div.submit
                | Submit
        